{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/base/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "apps/base/tsconfig.app.json",
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true,
          "dtoFileNameSuffix": [
            ".dto.ts",
            ".entity.ts",
            ".param.ts",
            ".query.ts"
          ]
        }
      }
    ]
  },
  "monorepo": true,
  "root": "apps/base",
  "projects": {
    "base": {
      "type": "application",
      "root": "apps/base",
      "entryFile": "main",
      "sourceRoot": "apps/base/src",
      "compilerOptions": {
        "tsConfigPath": "apps/base/tsconfig.app.json"
      }
    },
    "ai": {
      "type": "application",
      "root": "apps/ai",
      "entryFile": "main",
      "sourceRoot": "apps/ai/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ai/tsconfig.app.json"
      }
    },
    "env": {
      "type": "library",
      "root": "libs/env",
      "entryFile": "index",
      "sourceRoot": "libs/env"
    },
    "rmq": {
      "type": "library",
      "root": "libs/rmq",
      "entryFile": "index",
      "sourceRoot": "libs/rmq"
    },
    "utils": {
      "type": "library",
      "root": "libs/utils",
      "entryFile": "index",
      "sourceRoot": "libs/utils/src",
      "compilerOptions": {
        "tsConfigPath": "libs/utils/tsconfig.lib.json"
      }
    },
    "graph": {
      "type": "library",
      "root": "libs/graph",
      "entryFile": "index",
      "sourceRoot": "libs/graph/src",
      "compilerOptions": {
        "tsConfigPath": "libs/graph/tsconfig.lib.json"
      }
    },
    "cache": {
      "type": "library",
      "root": "libs/cache",
      "entryFile": "index",
      "sourceRoot": "libs/cache/src",
      "compilerOptions": {
        "tsConfigPath": "libs/cache/tsconfig.lib.json"
      }
    }
  }
}